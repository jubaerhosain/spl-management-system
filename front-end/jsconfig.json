{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@components/*": [
                "src/components/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@common/*": [
                "src/components/common/*"
            ],
            "@pages/*": [
                "src/pages/*"
            ],
            "@contexts/*": [
                "src/contexts/*"
            ],
            "@routes/*": [
                "src/routes/*"
            ],
            // Add more aliases as needed
        },
        "allowJs": true
    }
}